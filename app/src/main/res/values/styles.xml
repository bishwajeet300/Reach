<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <style name="SoundCloud" parent="FullscreenTheme" >
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
    </style>


    <style name="PageTitle">
        <item name="android:textColor">@color/page_title</item>
        <item name="fontPath">fonts/Raleway-ExtraBold.ttf</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="GroupHeading">
        <item name="android:textColor">@color/page_title</item>
        <item name="fontPath">fonts/Raleway-ExtraBold.ttf</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="GroupSubHeading">
        <item name="android:textColor">@color/page_subtitle</item>
        <item name="fontPath">fonts/Raleway-Regular.ttf</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TrackTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TrackSubtitle">
        <item name="android:textColor">@color/track_subtitle</item>
        <item name="fontPath">fonts/Raleway-Medium.ttf</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SplashText">
        <item name="android:textColor">@color/page_subtitle</item>
        <item name="fontPath">fonts/Raleway-Light.ttf</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="LoaderText">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/Raleway-Light.ttf</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="OptionsTitle">
        <item name="android:textColor">@color/options_title</item>
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TrackTitleDetail">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontPath">fonts/Raleway-Regular.ttf</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="TrackSubtitleDetail">
        <item name="android:textColor">@color/track_subtitle</item>
        <item name="fontPath">fonts/Raleway-Medium.ttf</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SCButton">
        <item name="android:textColor">@drawable/sc_text_state</item>
        <item name="fontPath">fonts/Raleway-Medium.ttf</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DetailsDialog" parent="FullscreenTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/black_overlay</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
