        <shape android:shape="oval">
            <size android:width="12dip" android:height="12dip" />
            <solid android:color="@color/black_overlay" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <size android:width="12dip" android:height="12dip" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>